@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Category </h2>
        </div>
        <div class="col-6 text-right text-white">
            <a class="btn btn-primary" asp-action="Create">Create Button</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
    <div>
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Category
                </th>
                <th>
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th class="text-nowrap" style="font-weight:normal">
                        @Html.DisplayFor(m=> item.Name)
                    </th>
                    <th>

                    </th>
                    <partial name="_EditViewDeletePartialView" model="item.Id"/>
                </tr>
            }
        </table>

    </div>
    }
    else {
    <h3>No Categories here....</h3>
    }
</div>
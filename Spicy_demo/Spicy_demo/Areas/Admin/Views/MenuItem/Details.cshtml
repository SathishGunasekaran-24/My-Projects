@model Spicy_demo.Models.View_Models.MenuItemViewModel
@using Spicy_demo.Extensions;
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">
    View MenuItem
</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MenuItem.Id" />
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Name" class="col-form-label">MenuItem</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Name" disabled class="form-control" />
                    </div>
                    <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Description" class="col-form-label">Description</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Description" disabled class="form-control" />
                    </div>
                    <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Price" class="col-form-label">Price</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Price" disabled class="form-control" />
                    </div>
                    <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.CategoryId" class="col-form-label">Category</label>
                    </div>
                    <div class="col-8">
                        <select id="ddlCategory" asp-for="MenuItem.CategoryId" disabled asp-items="Model.Categories.ToSelectectedItem(Model.MenuItem.CategoryId)" class="form-control"></select>
                    </div>
                    <span asp-validation-for="MenuItem.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.SubCategoryId" class="col-form-label">SubCategory</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.MenuItem.SubCategoryId" disabled name="SubCategoryId" id="SubCategoryId" asp-items="Model.SubCategories.ToSelectectedItem(Model.MenuItem.SubCategoryId)" class="form-control"></select>
                    </div>
                    <span asp-validation-for="MenuItem.SubCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Spicyness" class="col-form-label">Spicyness</label>
                    </div>
                    <div class="col-8">
                        <select id="ddlCategory" asp-for="MenuItem.Spicyness" disabled asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                    </div>
                    <span asp-validation-for="MenuItem.SubCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="offset-4 col-8 row">
                        <div class=" offset-6 col-6">
                            <a asp-action="index" class="col-12 btn btn-success">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 offset-1">
                <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>

    </div>
</form>


@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@using Spicy_demo.Utility
<br />
<h3 class="text-info">
    Register
</h3>
<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.Name" class="col-form-label">Name</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.Name" class="form-control" />
                </div>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.Email" class="col-form-label">Email</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.PhoneNumber" class="col-form-label">PhoneNumber</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.StreetAddress" class="col-form-label">StreetAddress</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.StreetAddress" class="form-control" />
                </div>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.City" class="col-form-label">City</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.City" class="form-control" />
                </div>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.State" class="col-form-label">State</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.State" class="form-control" />
                </div>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.PostalCode" class="col-form-label">PostalCode</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.PostalCode" class="form-control" />
                </div>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.Password" class="col-form-label">Password</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Input.ConfirmPassword" class="col-form-label">ConfirmPassword</label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.ManagerUser))
            {
                <div class="form-group row">
                    <div class="col-4">

                    </div>
                    <div class="col-8">
                        <input type="radio" name="radioUser" value="@SD.KitchenUser" checked /> @SD.KitchenUser
                        <input type="radio" name="radioUser" value="@SD.FrontDeskUser" checked /> @SD.FrontDeskUser
                        <input type="radio" name="radioUser" value="@SD.ManagerUser" checked /> @SD.ManagerUser
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            }
            <div class="row">
                <div class="offset-4 row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

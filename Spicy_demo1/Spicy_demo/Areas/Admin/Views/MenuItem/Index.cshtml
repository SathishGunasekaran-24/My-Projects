@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu Item </h2>
        </div>
        <div class="col-6 text-right text-white">
            <a class="btn btn-primary" asp-action="Create">Create Button</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">

                    <th>
                        MenuItem
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        SubCategory
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <th class="text-nowrap" style="font-weight:normal">
                            @Html.DisplayFor(m => item.Name)
                        </th>
                        <th class="text-nowrap" style="font-weight:normal">
                            @Html.DisplayFor(m => item.Price)
                        </th>
                        <th style="font-weight:normal">
                            @Html.DisplayFor(m => item.Category.Name)
                        </th>
                        <th style="font-weight:normal">
                            @Html.DisplayFor(m => item.SubCategory.Name)
                        </th>
                        <partial name="_EditViewDeletePartialView" model="item.Id" />
                    </tr>
                }
            </table>

        </div>
    }
    else
    {
        <h3>No Menu Items here....</h3>
    }
</div>


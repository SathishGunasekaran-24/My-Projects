@model Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">
    Create Coupon
</h2>
<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label">Name</label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label">Discount</label>
            </div>
            <div class="col-4">
                <input asp-for="Discount" class="form-control" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label">MinimumAmount</label>
            </div>
            <div class="col-4">
                <input asp-for="MinimumAmount" class="form-control" />
            </div>
            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label">CouponType</label>
            </div>
            <div class="col-4">
                <select id="ddlCategory" asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
            <span asp-validation-for="CouponType" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label">Image</label>
            </div>
            <div class="col-4">
                <input type="file" asp-for="Picture" name="files" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
            <div class="col-4">
                <input type="checkbox" asp-for="IsActive" class="form-check-input mx-1" />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-4 row">
                <div class="col-6">
                    <input type="submit" class=" col-12 btn btn-info" value="Create" />
                </div>
                <div class="col-6">
                    <a asp-action="index" class="col-12 btn btn-success">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

